{
  "name": "@designtools/next-plugin",
  "version": "0.1.0",
  "private": true,
  "main": "dist/index.js",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./codecanvas": {
      "require": "./dist/codecanvas.js",
      "import": "./dist/codecanvas.mjs"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts src/loader.ts src/codecanvas.tsx src/codecanvas-mount-loader.ts --format cjs,esm --dts --external @babel/core --external react --external react/jsx-runtime"
  },
  "peerDependencies": {
    "next": ">=14.0.0",
    "react": ">=18.0.0"
  },
  "devDependencies": {
    "@types/react": "^19.0.0",
    "next": "^15.0.0",
    "react": "^19.0.0",
    "tsup": "^8.0.0"
  }
}
